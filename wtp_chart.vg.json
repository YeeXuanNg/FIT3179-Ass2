{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Number of Water Treatment Plants (WTP) in Malaysia (2020 - 2022)",
    "subtitle": "Note: Data excludes Sabah and Sarawak.",
    "font": "Arial",
    "fontWeight": "bolder",
    "fontSize": 20,
    "anchor": "middle",
    "offset": 20
  },
  "width": 900,
  "height": 450,
  "data": {
    "url": "https://raw.githubusercontent.com/YeeXuanNg/FIT3179-Ass2/refs/heads/main/water_treatment_plants.csv"
  },
  "transform": [
    { "filter": "datum.Year == year_selection" }
  ],
  "params": [
    {
      "name": "year_selection",
      "bind": {
        "input": "select",
        "options": [2020, 2021, 2022],
        "name": "Select Year: "
      },
      "value": 2022
    }
  ],
  "layer": [
    {
      "mark": { "type": "bar" },
      "encoding": {
        "x": {
          "field": "State",
          "type": "nominal",
          "title": "State",
          "sort": "-y"
        },
        "y": {
          "field": "Unit (Nos)",
          "type": "quantitative",
          "title": "Number of Water Treatment Plants"
        },
        "color": {
          "condition": [
            {
              "test": "(year_selection == 2021) && (datum.State == 'Kelantan' || datum.State == 'Melaka' || datum.State == 'Perak')",
              "value": "#800080"   
            },
            {
              "test": "(year_selection == 2021) && (datum.State == 'Kedah')",
              "value": "#ff7f0e"   
            },
            {
              "test": "(year_selection == 2022) && (datum.State == 'Johor' || datum.State == 'Labuan' || datum.State == 'Negeri Sembilan' || datum.State == 'Pulau Pinang' || datum.State == 'Pahang' || datum.State == 'Perlis' || datum.State == 'Selangor')",
              "value": "#800080"   
            }
          ],
          "value": "#1f77b4" 
        },
        "tooltip": [
          { "field": "State", "title": "State" },
          { "field": "Year", "title": "Year" },
          { "field": "Unit (Nos)", "title": "Number of WTP" }
        ]
      }
    },

    
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle",
        "dy": 10,
        "fontSize": 9,
        "color": "white"
      },
      "encoding": {
        "x": { "field": "State", "type": "nominal", "sort": "-y" },
        "y": { "field": "Unit (Nos)", "type": "quantitative"},
        "text": { "field": "Unit (Nos)", "type": "quantitative" }
      }
    },

    
    {
      "mark": { "type": "rule", "stroke": "#000000", "strokeWidth": 2 },
      "encoding": {
        "x": { "value": 480 },
        "x2": {"value": 400},
        "y2": { "value": 50},
        "y": { "value": 50 }
      },
      "transform": [
        { "filter": "datum.State == 'Pahang' && year_selection == 2020" }
      ]
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "bottom",
        "dy": -245,
        "dx": -115,
        "fontSize": 10,
        "color": "black",
        "fontWeight": "bold"
      },
      "encoding": {
        "x": { "field": "State", "type": "nominal" },
        "y": { "value": 300 },
        "text": { "value": "Highest" }
      },
      "transform": [
        { "filter": "datum.State == 'Pahang' && year_selection == 2020" }
      ]
    },
    {
      "mark": { "type": "rule", "stroke": "#000000", "strokeWidth": 2 },
      "encoding": {
        "x": { "field": "State", "type": "nominal" },
        "y": { "field": "Unit (Nos)", "type": "quantitative" },
        "y2": { "value": 180 }
      },
      "transform": [
        { "filter": "datum.State == 'Perlis' && year_selection == 2020" }
      ]
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "bottom",
        "dy": -30,
        
        "fontSize": 10,
        "color": "#000000",
        "fontWeight": "bold"
      },
      "encoding": {
        "x": { "field": "State", "type": "nominal" },
        "y": { "value": 200 },
        "text": { "value": "Lowest" }
      },
      "transform": [
        { "filter": "datum.State == 'Perlis' && year_selection == 2020" }
      ]
    },

   
    {
      "mark": {
        "type": "text",
        "x": 730,
        "y": 45,
        "align": "center",
        "baseline": "top",
        "fontSize": 12,
        "color": "#333"
      },
      "encoding": {
        "text": { "value": "Purple = Increase from 2020" }
      },
      "transform": [
        { "filter": "year_selection == 2021" }
      ]
    },
    {
      "mark": {
        "type": "text",
        "x": 705,
        "y": 60,
        "align": "center",
        "baseline": "top",
        "fontSize": 12,
        "color": "#333"
      },
      "encoding": {
        "text": { "value": "Orange = Decrease" }
      },
      "transform": [
        { "filter": "year_selection == 2021" }
      ]
    },
    {
      "mark": {
        "type": "text",
        "x": 700,
        "y": 75,
        "align": "center",
        "baseline": "top",
        "fontSize": 12,
        "color": "#333"
      },
      "encoding": {
        "text": { "value": "Blue = No change" }
      },
      "transform": [
        { "filter": "year_selection == 2021" }
      ]
    },


    {
      "mark": {
        "type": "text",
        "x": 700,
        "y": 45,
        "align": "center",
        "baseline": "top",
        "fontSize": 12,
        "color": "#333"
      },
      "encoding": {
        "text": { "value": "Purple = States that maintained same" }
      },
      "transform": [
        { "filter": "year_selection == 2022" }
      ]
    },
    {
      "mark": {
        "type": "text",
        "x": 720,
        "y": 60,
        "align": "center",
        "baseline": "top",
        "fontSize": 12,
        "color": "#333"
      },
      "encoding": {
        "text": { "value": "number of WTPs since 2020" }
      },
      "transform": [
        { "filter": "year_selection == 2022" }
      ]
    }
  ]
}